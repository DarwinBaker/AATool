<?xml version="1.0" encoding="utf-8" ?>
<control width="1224" height="912">
    <grid drawmode="all">
        <rows>
            <row height="870"/>
            <row height="42"/>
        </rows>
        <columns>
            <column width="150"/>
            <column width="1074"/>
        </columns>

        <!-- complex advancements -->
        <criteria_group advancement="achievement.exploreAllBiomes" height="1*" horizontal_align="left"/>
        
        <!-- achievements -->
        <achievement_tree col="1" padding_left="25">
            <rows>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="42"/>
            </rows>
            <columns>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
                <column width="64"/>
            </columns>

            <!-- achievements -->
            <advancement id="achievement.openInventory"         row="1"     col="2"/>
            <advancement id="achievement.mineWood"              row="1"     col="4"/>
            <advancement id="achievement.buildWorkBench"        row="1"     col="6"/>

            <advancement id="achievement.buildHoe"              row="3"     col="3"/>
            <advancement id="achievement.makeBread"             row="3"     col="5"/>
            <advancement id="achievement.bakeCake"              row="3"     col="1"/>

            <advancement id="achievement.buildSword"            row="5"     col="5"/>
            <advancement id="achievement.killEnemy"             row="5"     col="3"/>
            <advancement id="achievement.snipeSkeleton"         row="5"     col="1"/>
            <advancement id="achievement.killCow"               row="7"     col="5"/>
            <advancement id="achievement.flyPig"                row="7"     col="3"/>
            <advancement id="achievement.breedCow"              row="7"     col="1"/>

            <advancement id="achievement.buildPickaxe"          row="1"     col="10"/>
            <advancement id="achievement.buildBetterPickaxe"    row="1"     col="12"/>
            <advancement id="achievement.overpowered"           row="1"     col="14"/>

            <advancement id="achievement.buildFurnace"          row="3"     col="10"/>
            <advancement id="achievement.cookFish"              row="3"     col="8"/>
            <advancement id="achievement.acquireIron"           row="3"     col="12"/>
            <advancement id="achievement.onARail"               row="3"     col="14"/>

            <advancement id="achievement.diamonds"              row="5"     col="12"/>
            <advancement id="achievement.diamondsToYou"         row="5"     col="14"/>
            <advancement id="achievement.enchantments"          row="7"     col="12"/>
            <advancement id="achievement.overkill"              row="7"     col="14"/>
            <advancement id="achievement.bookcase"              row="9"     col="12"/>

            <advancement id="achievement.portal"                row="5"     col="10"/>
            <advancement id="achievement.ghast"                 row="5"     col="8"/>
            <advancement id="achievement.blazeRod"              row="7"     col="10"/>
            <advancement id="achievement.potion"                row="7"     col="8"/>

            <advancement id="achievement.theEnd"                row="9"     col="10"/>
            <advancement id="achievement.exploreAllBiomes"      row="11"    col="10"/>

            <advancement id="achievement.theEnd2"               row="9"     col="8"/>
            <advancement id="achievement.spawnWither"           row="9"     col="6"/>
            <advancement id="achievement.killWither"            row="11"    col="6"/>
            <advancement id="achievement.fullBeacon"            row="11"    col="8"/>
        </achievement_tree>

        <!-- item count display (trident, shells, skulls etc.) -->
        <flow_panel name="counts" col="1" width="100" height="200" cell_width="68" cell_height="82" horizontal_align="left" padding_top="20" margin="-1,0,0-1" vertical_align="bottom" border_thickness="2">
            <item_count id="minecraft.skull"/>
            <item_count id="minecraft.gold_block"/>
        </flow_panel>

        <!-- progress bars and controls -->
        <grid row="1">
            <columns>
                <column width="408"/>
                <column width="340"/>
                <column width="476"/>
            </columns>

            <panel col="0">
                <enchantment_table name="enchantment_table" width="36" height="36" horizontal_align="left" vertical_align="bottom" margin_left="2" margin_bottom="4"/>
                <text_block name="label_save" height="12" horizontal_align="left" margin_left="45"/>
                <button name="button_settings" text="Settings" width="70" height="29" horizontal_align="right" margin_right="6"/>
            </panel>
            <panel col="1">
                <text_block name="label_progress" height="12" vertical_align="bottom" margin_bottom="22"/>
                <progress_bar name="progress_bar" width="0.9*" vertical_align="bottom" margin="6,6,0,8"/>
            </panel>
            <panel col="2">
                <text_block width="300" height="12" horizontal_align="left" vertical_align="top" margin="8,50,8,0"
                text="If you like this tool and want to support its continued development, please consider donating! :)"/>
                <button name="button_patreon" text="♥ Support me on Patreon ♥" width="170" height="29" horizontal_align="right" margin_right="5"/>
            </panel>
        </grid>
    </grid>
</control>