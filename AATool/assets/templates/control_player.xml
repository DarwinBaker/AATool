<?xml version="1.0" encoding="utf-8" ?>
<control height="66">
    <grid padding="8,0,8,32">
        <rows>
            <row height="38"/>
            <row height="18"/>
        </rows>
        <columns>
            <column width="32"/>
            <column width="128"/>
        </columns>

        <panel row="0" col="0" horizontal_align="left" vertical_align="top" square="true" border_thickness="2">
            <avatar scale="4"/>
        </panel>
        <text_block name="label_name"     row="0" col="1" h_text_align="left" vertical_align="top" padding_left="5" margin_top="2"/>
        <text_block name="label_pronouns" row="0" col="1" h_text_align="left" vertical_align="top" padding_left="5" margin_top="17"/>

        <!-- item counts -->
        <flow_carousel name="items" row="1" colspan="2" height="16" cell_width="40" direction="lefttoright" draw_mode="childrenonly" right_to_left="true" speed="30">

            <text_block name="minecraft:enchanted_golden_apple" width="40" text_align="left" collapsed="true">
                <picture texture="enchanted_golden_apple" width="16" height="16" square="true" margin_top="-2" horizontal_align="left" vertical_align="top"/>
            </text_block>

            <text_block name="minecraft:trident" width="40" text_align="left" collapsed="true">
                <picture texture="trident" width="16" height="16" square="true" margin_top="-2" horizontal_align="left" vertical_align="top"/>
            </text_block>

            <text_block name="minecraft:nautilus_shell" width="40" text_align="left" collapsed="true">
                <picture texture="nautilus_shell" width="16" height="16" square="true" margin_top="-2" horizontal_align="left" vertical_align="top"/>
            </text_block>

            <text_block name="minecraft:wither_skeleton_skull" width="40" text_align="left" collapsed="true">
                <picture texture="wither_skull" width="16" height="16" square="true" margin_top="-2" horizontal_align="left" vertical_align="top"/>
            </text_block>

            <text_block name="minecraft:ancient_debris" width="40" text_align="left" collapsed="true">
                <picture texture="debris" width="16" height="16" square="true" margin_top="-2" horizontal_align="left" vertical_align="top"/>
            </text_block>

        </flow_carousel>
    </grid>
</control>