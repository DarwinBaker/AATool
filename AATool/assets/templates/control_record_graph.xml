<?xml version="1.0" encoding="utf-8" ?>
<control>
    <grid>
        <rows>
            <row height="8"/>
            <row height="1*"/>
            <row height="40"/>
            <row height="8"/>
        </rows>
        <columns>
            <column width="8"/>
            <column width="60"/>
            <column width="60"/>
            <column width="1*"/>
            <column width="8"/>
        </columns>

        <panel col="0" row="0" rowspan="4" border_thickness="8" inner_corners="false"></panel>
        <panel col="1" row="0" colspan="2" border_thickness="8" inner_corners="false"></panel>
        <panel col="0" row="3" colspan="4" border_thickness="8" inner_corners="false"></panel>
        <panel col="4" row="2" rowspan="2" border_thickness="8" inner_corners="false"></panel>

        <slider row="1" col="1" rowspan="2" name="time_slider" vertical="true" padding_left="8" padding_right="8" padding_top="48" padding_bottom="47"></slider>
        <!-- <slider row="2" col="3" name="date_slider" vertical="false" padding_left="8" padding_right="48" padding_top="28" padding_bottom="8"></slider> -->
        <panel name="graph" row="0" col="3" colspan="2" rowspan="2" draw_mode="none" padding="32">
        </panel>

        <text_block name="no_records" font_size="36" hidden="true" layer="fore" row="0" col="3" colspan="2" rowspan="2" v_text_align="center"/>

        <panel name="hover_test" row="0" col="3" rowspan="2" width="180" height="182" >
            <panel height="50" vertical_align="top" border_thickness="8" padding_top="12">
                <text_block name="runner" font_size="24"/>
            </panel>
            <panel height="140" margin_top="42" vertical_align="top" border_thickness="8" padding="20">

                <button name="profile" width="38" height="38" vertical_align="top" horizontal_align="left">
                    <avatar scale="4"/>
                </button>

                <button name="link" width="14" height="14" row="0" col="1" vertical_align="top" horizontal_align="right"
                    margin_top="32" border_thickness="1">
                    <picture texture="open_link" label_tint="true" width="10" height="10"/>
                </button>

                <text_block name="wr_number" h_text_align="left" vertical_align="top" padding_left="48" margin_top="5" height="15"/>
                <text_block name="igt" h_text_align="left" vertical_align="top" padding_left="48" margin_top="20" height="15"/>

                <panel height="2" inner_corners="false" margin_top="50" vertical_align="top"></panel>

                <text_block name="set" h_text_align="left" vertical_align="top" margin_top="60" height="15"/>
                <text_block name="lasted" h_text_align="left" vertical_align="top" margin_top="75" height="15"/>
                <text_block name="beaten" h_text_align="left" vertical_align="top" margin_top="90" height="15"/>

            </panel>
        </panel>

    </grid>
</control>