<?xml version="1.0" encoding="utf-8" ?>
<control width="1250">
    <!-- left panel -->
    <minecraft_panel style="dark" scale="4" height="410" width="920" horizontal_align="left">

        <!-- header panel -->
        <minecraft_panel style="gold" scale="4" vertical_align="top" height="80" padding_top="12">
            <text_block name="head_shadow" font_size="48" color="62,62,62" margin_left="4" margin_top="4" vertical_align="top"/>
            <text_block name="head" font_size="48"/>
        </minecraft_panel>

        <!-- body panel -->
        <panel name="fadegroup_overview" draw_mode="childrenonly">
            <text_block name="body"       font_size="48" padding_top="120" color="268,0,268" text_align="center"/>
            <text_block name="stats_misc" font_size="24" padding="16,0,120,0" width="600" height="200" horizontal_align="left" text_align="left" vertical_align="top"/>
        </panel>
        <panel name="fadegroup_credits" draw_mode="childrenonly">
            <picture name="ctm" layer="fore" width="90" height="90" margin_left="16" margin_top="86" horizontal_align="left" vertical_align="top">
                
            </picture>
            <text_block name="version" font_size="36" padding_top="85" padding_left="125" h_text_align="left" v_text_align="top"/>
            <text_block name="creator" font_size="24" padding_top="122" padding_left="125" h_text_align="left" v_text_align="top"/>
            <text_block name="patreon" font_size="24" padding_top="150" padding_left="125" h_text_align="left" v_text_align="top"/>
 
            <!-- supporters -->
            <text_block name="supporters_label" text="Supporters ----------------------------------------" font_size="24" padding_left="20" padding_top="182" h_text_align="left"/>
            <flow_panel name="supporters" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_left="20" padding_top="218" padding_bottom="32" direction="toptobottom" horizontal_align="left">
            </flow_panel>

            <!-- beta testers -->
            <flow_panel name="beta_testers" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_right="20" padding_top="120" direction="toptobottom" horizontal_align="right">
            </flow_panel>

            <!-- special thanks -->
            <flow_panel name="special_dedication" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_right="20" padding_top="270" direction="toptobottom" horizontal_align="right">
            </flow_panel>
        </panel>

        <!-- page switch timer bar -->
        <picture name="bar" texture="pixel" max_width="880" height="4" margin_bottom="20" vertical_align="bottom"/>
    </minecraft_panel>

    <minecraft_panel style="dark" scale="4" width="300" height="410" margin_left="940" horizontal_align="left">

        <!-- header panel -->
        <minecraft_panel style="gold" scale="4" vertical_align="top" height="80" padding_top="12">
            <text_block text="Run Stats" font_size="48" color="62,62,62" margin_left="4" margin_top="4" vertical_align="top"/>
            <text_block text="Run Stats" font_size="48"/>
        </minecraft_panel>

        <!-- general stats -->
        <flow_panel name="stats_general" padding_left="12" padding="16,20,86,0" draw_mode="childrenonly" vertical_align="top" horizontal_align="left" direction="toptobottom">

            <text_block name="flown" height="62" font_size="48" h_text_align="left" v_text_align="top">
                <picture texture="rockets" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_elytra" margin_left="21" width="48" height="48" horizontal_align="left"/>
                <text_block text="KM Flown" height="38" font_size="24" text_align="right" v_text_align="top"/>
            </text_block>

            <text_block name="bread" height="62" font_size="48" h_text_align="left" v_text_align="top">
                <picture texture="bread" margin_left="21" width="48" height="48" horizontal_align="left"/>
                <picture texture="heal" width="48" height="48" horizontal_align="left"/>
                <text_block text="Eaten" height="38" font_size="24" text_align="right" v_text_align="top"/>
            </text_block>

            <text_block name="enchants" height="62" font_size="48" h_text_align="left" v_text_align="top">
                <picture texture="enchant_item" margin_left="24" width="48" height="48" horizontal_align="left"/>
                <picture texture="lapis_lazuli" width="48" height="48" margin_left="-3" margin_top="1" horizontal_align="left" vertical_align="top"/>
                <text_block text="Enchants" height="38" font_size="24" text_align="right" v_text_align="top"/>
            </text_block>

            <text_block name="pearls" height="62" font_size="48" h_text_align="left" v_text_align="top">
                <picture texture="ender_pearl" width="48" height="48" horizontal_align="left" margin_left="-6"/>
                <picture texture="ender_pearl" width="48" height="48" horizontal_align="left" margin_left="9"/>
                <picture texture="ender_pearl" width="48" height="48" horizontal_align="left" margin_left="24"/>
                <text_block text="Thrown" height="38" font_size="24" text_align="right" v_text_align="top"/>
            </text_block>

            <text_block name="temples" height="62" font_size="48" h_text_align="left" v_text_align="top">
                <picture texture="temple" margin_left="21" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_golden_apple" width="48" height="48" horizontal_align="left"/>
                <text_block text="Temples" height="38" font_size="24" text_align="right" v_text_align="top"/>
            </text_block>
        </flow_panel>

        <!-- kill stats -->
        <flow_panel name="stats_kills" padding_left="24" padding="24,32,86,0" draw_mode="childrenonly" vertical_align="top" horizontal_align="left" direction="toptobottom">

            <text_block name="creepers" height="62" font_size="48" v_text_align="top" padding="20,20,0,0">
                <picture texture="creeper" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_sword" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="drowned" height="62" font_size="48" v_text_align="top" padding="20,20,0,0">
                <picture texture="drowned" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_sword" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="withers" height="62" font_size="48" v_text_align="top" padding="20,20,0,0">
                <picture texture="wither_skeleton" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_sword" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="fish" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="cod" margin_left="21" width="48" height="48" horizontal_align="left"/>
                <picture texture="salmon_stats" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_axe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="phantoms" height="62" font_size="48" v_text_align="top" padding="20,20,0,0">
                <picture texture="phantom" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_crossbow" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>
        </flow_panel>

        <!-- Mined stats -->
        <flow_panel name="stats_mined" padding_left="24" padding_top="86" draw_mode="childrenonly" vertical_align="top" horizontal_align="left" direction="toptobottom">

            <text_block name="netherrack" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="netherrack" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_pickaxe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="gold_blocks" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="gold_block" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_pickaxe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="ender_chests" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="ender_chest" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_pickaxe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="lecterns" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="lectern" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_axe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

            <text_block name="sugarcane" height="62" font_size="48" text_align="center" padding="20,20,0,0">
                <picture texture="sugarcane" width="48" height="48" horizontal_align="left"/>
                <picture texture="enchanted_diamond_axe" margin_left="-24" width="48" height="48" horizontal_align="left"/>
            </text_block>

        </flow_panel>

    </minecraft_panel>
</control>