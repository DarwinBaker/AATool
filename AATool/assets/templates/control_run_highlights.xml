<?xml version="1.0" encoding="utf-8" ?>
<control width="1250">
    <!-- left panel -->
    <minecraft_panel style="dark" scale="3" height="150" width="920" horizontal_align="left">

        <!-- header panel -->
        <minecraft_panel style="gold" scale="3" vertical_align="top" height="56" padding_top="6">
            <text_block name="head_shadow" text="Current Run" font_size="36" color="62,62,62" margin_left="3" margin_top="3" vertical_align="top"/>
            <text_block name="head" text="Current Run" font_size="36"/>
        </minecraft_panel>

        <!-- body panel -->
        <panel name="fadegroup_overview" draw_mode="childrenonly">
            <text_block name="body"       font_size="48" padding_top="120" color="268,0,268" text_align="center"/>
            <text_block name="stats_misc" font_size="24" padding="16,0,120,0" width="600" height="200" horizontal_align="left" text_align="left" vertical_align="top"/>
        </panel>
        <panel name="fadegroup_credits" draw_mode="childrenonly">

            <text_block name="version" font_size="36" padding_top="85" padding_left="125" h_text_align="left" v_text_align="top"/>

            <!-- supporters -->
            <text_block name="supporters_label" text="Supporters" font_size="24" padding_left="20" padding_top="182" h_text_align="left"/>
            <flow_panel name="supporters" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_left="20" padding_top="218" padding_bottom="32" direction="toptobottom" horizontal_align="left">
            </flow_panel>

            <!-- beta testers -->
            <flow_panel name="beta_testers" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_right="20" padding_top="120" direction="toptobottom" horizontal_align="right">
            </flow_panel>

            <!-- special thanks -->
            <flow_panel name="special_dedication" width="220" cell_width="200" cell_height="32" draw_mode="childrenonly" margin_right="20" padding_top="270" direction="toptobottom" horizontal_align="right">
            </flow_panel>
        </panel>

        <!-- page switch timer bar -->
        <picture name="bar" texture="pixel" max_width="880" height="4" margin_bottom="20" vertical_align="bottom"/>
    </minecraft_panel>
</control>