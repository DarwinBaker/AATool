<?xml version="1.0" encoding="utf-8" ?>
<control>
    <!-- settings button -->
    <panel name="settings" width="82" horizontal_align="left">
        <button text="Settings" width="70" height="30" horizontal_align="left" margin_left="6"/>
    </panel>
    <!-- status -->
    <panel name="status" width="310" horizontal_align="left" margin_left="82">
        <enchantment_table width="36" height="36" horizontal_align="left" vertical_align="bottom" margin_left="3" margin_bottom="4"/>
        <text_block width="270" horizontal_align="left" text_align="center" padding_left="45" layer="fore"/>
        <refresh_icon horizontal_align="right" margin_right="5"/>
    </panel>

    <!-- advancement progress bar -->
    <panel name="progress_advancements" margin_left="392" horizontal_align="left" collapsed="true">
        <text_block width="0.85*" height="12" vertical_align="bottom" margin_bottom="24"/>
        <progress_bar vertical_align="bottom" horizontal_align="left" margin="10,10,0,8"/>
    </panel>

    <!-- all blocks mode has a few extra controls -->
    <panel name="progress_blocks" margin_left="392" horizontal_align="left" collapsed="true">
        <panel name="progress_panel" padding_left="184" >
            <text_block width="0.85*" height="12" vertical_align="bottom" margin_bottom="24"/>
            <progress_bar vertical_align="bottom" horizontal_align="left" margin="10,10,0,8"/>
        </panel>
        <button name="clear_blocks_highlighted" width="86" height="30" horizontal_align="left" margin_left="6">
            <picture texture="clear_highlighted_blocks" width="16" height="16" horizontal_align="left" margin_left="7"/>
        </button>
        <button name="clear_blocks_confirmed" width="86" height="30" horizontal_align="left" margin_left="98">
            <picture texture="clear_confirmed_blocks" width="16" height="16" horizontal_align="left" margin_left="7"/>
        </button>
    </panel>

    <!-- patreon -->
    <panel name="patreon" width="460" horizontal_align="right">
        <text_block name="donate" width="300" text_align="left" horizontal_align="left" v_text_align="center" margin="8,200,-1,0"/>
        <picture name="strider" texture="strider_walking" width="32" height="32" horizontal_align="right" margin_right="178" layer="fore">
            <glow_effect name="strider_glow" texture="player_glow" brightness="0.5"/>
        </picture>
        <button text="♥  Check out the Patreon!  ♥" layer="fore" width="170" height="29" horizontal_align="right" margin_right="6">
            <picture name="rainbow_glow" texture="patreon_glow" layer="glow" brightness="0.5" padding="-20"/>
        </button>
    </panel>
</control>