<?xml version="1.0" encoding="utf-8" ?>
<control width="1920" height="380">
    
    <!-- criteria carousel -->
    <criteria_carousel name="criteria"/>

    <!-- advancement carousel -->
    <advancement_carousel name="advancements"/>

    <!-- item count display (trident, shells, skulls etc.) -->
    <grid name="grid_counts" width="768" horizontal_align="right" vertical_align="top">
        <columns>
            <column width="128"/>
            <column width="128"/>
            <column width="128"/>
            <column width="128"/>
            <column width="128"/>
            <column width="128"/>
        </columns>
        <item_count id="minecraft:enchanted_golden_apple"   scale="3" row="0" col="0" vertical_align="top"/>
        <item_count id="minecraft:trident"                  scale="3" row="0" col="1" vertical_align="top"/>
        <item_count id="minecraft:nautilus_shell"           scale="3" row="0" col="2" vertical_align="top"/>
        <item_count id="minecraft:wither_skeleton_skull"    scale="3" row="0" col="3" vertical_align="top"/>
        <item_count id="minecraft:ancient_debris"           scale="3" row="0" col="4" vertical_align="top"/>
        <item_count id="minecraft:gold_block"               scale="3" row="0" col="5" vertical_align="top"/>
    </grid>
</control>