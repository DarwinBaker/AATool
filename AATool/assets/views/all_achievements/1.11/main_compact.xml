        <columns>
            <column width="160" collapsed="true"/>
            <column width="700"/>
            <column width="224"/>
        </columns>

        <!-- achievements -->
        <achievement_tree col="1">
            <rows>
                <row height="16"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="64"/>
                <row height="16"/>
                <row height="64"/>
                <row height="16"/>
                <row height="64"/>
                <row height="16"/>
            </rows>
            <columns>
                <column width="46"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="16"/>
                <column width="64"/>
                <column width="64"/>
            </columns>

            <!-- achievements -->
            <objective_frame achievement="achievement.openInventory"         row="1"     col="1"/>
            <objective_frame achievement="achievement.mineWood"              row="1"     col="3"/>
            <objective_frame achievement="achievement.buildWorkBench"        row="1"     col="6"/>

            <objective_frame achievement="achievement.buildHoe"              row="3"     col="3"/>
            <objective_frame achievement="achievement.makeBread"             row="3"     col="5"/>
            <objective_frame achievement="achievement.bakeCake"              row="3"     col="1"/>

            <objective_frame achievement="achievement.buildSword"            row="5"     col="5"/>
            <objective_frame achievement="achievement.killEnemy"             row="5"     col="3"/>
            <objective_frame achievement="achievement.snipeSkeleton"         row="5"     col="1"/>
            <objective_frame achievement="achievement.killCow"               row="7"     col="3"/>
            <objective_frame achievement="achievement.flyPig"                row="7"     col="5"/>
            <objective_frame achievement="achievement.breedCow"              row="7"     col="1"/>

            <objective_frame achievement="achievement.buildPickaxe"          row="1"     col="10"/>
            <objective_frame achievement="achievement.buildBetterPickaxe"    row="1"     col="12"/>
            <objective_frame achievement="achievement.overpowered"           row="1"     col="14"/>

            <objective_frame achievement="achievement.buildFurnace"          row="3"     col="10"/>
            <objective_frame achievement="achievement.cookFish"              row="3"     col="8"/>
            <objective_frame achievement="achievement.acquireIron"           row="3"     col="12"/>
            <objective_frame achievement="achievement.onARail"               row="3"     col="14"/>

            <objective_frame achievement="achievement.diamonds"              row="5"     col="12"/>
            <objective_frame achievement="achievement.diamondsToYou"         row="5"     col="14"/>
            <objective_frame achievement="achievement.enchantments"          row="7"     col="12"/>
            <objective_frame achievement="achievement.overkill"              row="7"     col="14"/>
