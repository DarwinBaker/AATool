            <objective_frame achievement="achievement.theEnd2"               row="11"    col="8"/>
            <objective_frame achievement="achievement.spawnWither"           row="11"    col="5"/>
            <objective_frame achievement="achievement.killWither"            row="11"    col="3"/>
            <objective_frame achievement="achievement.fullBeacon"            row="11"    col="1"/>
        </achievement_tree>

        <!-- item count display (trident, shells, skulls etc.) -->
        <panel name="counts" col="2" width="224" height="240" horizontal_align="left" vertical_align="top">
            <panel width="112" horizontal_align="left" padding_top="16">
                <objective_frame complex="Egap" vertical_align="top" margin_top="30"/>
                <text_block col="1" padding="10,10,130,0" text="Note: Due to the way pre-1.13 Minecraft IDs work, God Apple must be manually checked until eaten."/>
            </panel>
            <flow_panel width="112" horizontal_align="right" padding_top="16" padding_left="23">
                <objective_frame complex="WitherSkulls"/>
                <objective_frame complex="GoldBlocks" margin_top="40"/>
            </flow_panel>
        </panel>

        <!-- complex advancements -->
        <criteria_group advancement="achievement.exploreAllBiomes" col="2" height="418" horizontal_align="right" vertical_align="bottom"/>

        <!-- status strip -->
        <status_bar row="1" col="1" colspan="3" right="330"/>
