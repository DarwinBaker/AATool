            <objective_frame achievement="achievement.theEnd2"               row="10"    col="7"/>
            <objective_frame achievement="achievement.spawnWither"           row="10"    col="5"/>
            <objective_frame achievement="achievement.killWither"            row="10"    col="3"/>
            <objective_frame achievement="achievement.fullBeacon"            row="10"    col="1"/>
        </achievement_tree>

        <text_block col="1" width="260" horizontal_align="right" h_text_align="left" padding_top="10" text="Note: Due to the way pre-1.13 Minecraft IDs work God Apple must be manually checked until eaten."/>

        <!-- adventuring time -->
        <criteria_group advancement="achievement.exploreAllBiomes" col="2" height="370" horizontal_align="right" vertical_align="bottom"/>

        <!-- pickup counters -->
        <panel col="2" width="100" height="180" horizontal_align="left" vertical_align="top" padding_top="50">
            <objective_frame pickup="minecraft:enchanted_golden_apple" vertical_align="top"/>
        </panel>
        <flow_panel name="counts" col="2" width="100" height="236" cell_height="100" padding_left="16" margin_top="180" padding_top="15" horizontal_align="left" vertical_align="top">
            <objective_frame pickup="minecraft.skull"/>
            <objective_frame pickup="minecraft.gold_block"/>
        </flow_panel>

        <!-- leaderboard -->
        <leaderboard name="Leaderboard" category="All Advancements" version="1.11" width="230" height="416" col="2" horizontal_align="right" vertical_align="top"/>

        <!-- status strip -->
        <status_bar row="1" col="1" colspan="3" right="330"/>
    </grid>
</control>