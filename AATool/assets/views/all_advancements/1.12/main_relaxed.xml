<?xml version="1.0" encoding="utf-8" ?>
<control>
    <grid>
        <rows>
            <row height="416"/>
            <row height="370"/>
            <row height="42"/>
        </rows>
        <columns>
            <column width="160" collapsed="true"/>
            <column width="16 * 68"/>
            <column width="68"/>
        </columns>

        <!-- co-op lobby -->
        <lobby row="0" col="0" rowspan="3"/>

        <!-- basic advancements -->
        <grid row="0" col="1" colspan="2">
            <rows>
                <row height="248"/>
                <row height="168"/>
            </rows>
            <columns>
                <column width="5 * 68"/>
                <column width="5 * 68"/>
                <column width="3 * 68"/>
                <column width="3 * 68"/>
            </columns>

            <advancement_group group="minecraft" row="0" col="0" exclude="minecraft:story/root"/>
            <advancement_group group="nether"    row="0" col="1" direction="righttoleft"/>
            <advancement_group group="end"       row="1" col="0" exclude="minecraft:end/root"/>
            <advancement_group group="adventure" row="0" col="2" end="minecraft:adventure/summon_iron_golem"/>
            <advancement_group group="adventure" row="1" col="2" start="minecraft:adventure/totem_of_undying"/>
            <advancement_group group="husbandry" row="1" col="1"/>
            <potion_group                        row="0" col="3" rowspan="2"/>
        </grid>

        <!-- advancements with subcriteria -->
        <flow_panel row="1" col="1" colspan="2" drawmode="all">
            <criteria_group width="5 * 68" advancement="minecraft:adventure/adventuring_time"/>
            <criteria_group width="4 * 68" advancement="minecraft:adventure/kill_all_mobs"/>
            <criteria_group width="5 * 68" advancement="minecraft:husbandry/balanced_diet"/>
            <criteria_group width="3 * 68" advancement="minecraft:husbandry/bred_all_animals"/>
        </flow_panel>

        <!-- item count display (trident, shells, skulls etc.) -->
        <flow_panel name="counts" row="0" col="2" cell_width="68" cell_height="81">
            <objective_frame pickup="minecraft.skull"/>
        </flow_panel>

        <!-- status strip -->
        <status_bar row="2" col="1" colspan="3" right="330"/>
    </grid>
</control>