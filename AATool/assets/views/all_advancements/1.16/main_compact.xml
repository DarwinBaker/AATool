<?xml version="1.0" encoding="utf-8" ?>
<control>
    <grid drawmode="all">
        <rows>
            <row height="348"/>
            <row height="310"/>
            <row height="42"/>
        </rows>
        <columns>
            <column width="160" collapsed="true"/>
            <column width="17 * 66"/>
            <column width="66"/>
        </columns>

        <panel col="1"></panel>

        <!-- co-op lobby -->
        <lobby row="0" col="0" rowspan="3"/>

        <!-- basic advancements -->
        <panel row="0" col="1" drawmode="all" padding_bottom="4">
            <advancement_group group="minecraft" exclude="minecraft:story/cure_zombie_villager" width="5 * 66" height="3 * 68" horizontal_align="left" vertical_align="top"/>
            <advancement_group group="nether"    width="8 * 66" height="3 * 68" margin_left="5 * 66" horizontal_align="left" vertical_align="top" direction="righttoleft"/>
            <advancement_group group="end"       exclude="minecraft:end/root" width="4 * 66" height="2 * 68" margin_top="3 * 68" horizontal_align="left" vertical_align="top"/>
            <advancement_group group="adventure" width="4 * 66" height="5 * 68" margin_left="13 * 66" vertical_align="top"/>
            <advancement_group group="husbandry" end="minecraft:husbandry/obtain_netherite_hoe" width="9 * 66" height="68" margin_left="4 * 66" margin_top="3 * 68" vertical_align="top"/>
            <advancement_group group="husbandry" start="minecraft:husbandry/bred_all_animals" width="3 * 66" height="68" margin_left="7 * 66" margin_top="4 * 68" vertical_align="top"/>
            <objective_frame advancement="minecraft:story/cure_zombie_villager" width="66" height="68" margin="330,0,136,0" horizontal_align="left" vertical_align="top"/>
        </panel>

        <!-- advancements with subcriteria -->
        <flow_panel row="1" col="1" colspan="2" drawmode="all">
            <criteria_group width="276" advancement="minecraft:adventure/adventuring_time"/>
            <criteria_group width="276" advancement="minecraft:adventure/kill_all_mobs"/>
            <criteria_group width="296" advancement="minecraft:husbandry/balanced_diet"/>
            <criteria_group width="166" advancement="minecraft:husbandry/bred_all_animals"/>
            <criteria_group width="87"  advancement="minecraft:husbandry/complete_catalogue"/>
            <criteria_group width="87"  advancement="minecraft:nether/explore_nether"/>
        </flow_panel>

        <!-- item count display (trident, shells, skulls etc.) -->
        <flow_panel name="counts" col="2" cell_width="68" cell_height="68" direction="toptobottom">
            <objective_frame pickup="minecraft:enchanted_golden_apple"/>
            <objective_frame pickup="minecraft:trident"/>
            <objective_frame pickup="minecraft:nautilus_shell"/>
            <objective_frame pickup="minecraft:wither_skeleton_skull"/>
            <objective_frame pickup="minecraft:ancient_debris"/>
        </flow_panel>

        <!-- enchanted golden apple manual override -->
        <button name="toggle_egap" row="0" col="2" width="20" height="20" margin_top="5" margin_right="5" vertical_align="top" horizontal_align="right">
            <picture/>
        </button>

        <!-- status strip -->
        <status_bar row="2" col="1" colspan="3" right="456"/>
    </grid>
</control>