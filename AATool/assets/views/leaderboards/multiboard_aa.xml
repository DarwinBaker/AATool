<?xml version="1.0" encoding="utf-8" ?>
<control>
    <grid name="all_versions">
        <rows>
            <row height="648"/>
            <row height="160"/>
        </rows>
        <columns>
            <column width="160" collapsed="true"/>
            <column width="27 * 68"/>
        </columns>

        <!-- co-op lobby -->
        <lobby row="0" col="0" rowspan="3"/>

        <!-- aa leaderboard -->
        <flow_panel row="0" col="1">
            <leaderboard category="All Advancements" version="1.18" col="1" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.17" col="2" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.16" col="3" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.15" col="4" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.14" col="5" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.13" col="6" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.12" col="7" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.11" col="8" rows="10" width="204"/>
            <leaderboard category="All Advancements" version="1.6"  col="9"  rows="10" width="204"/>
        </flow_panel>

        <grid row="1" col="1">
            <columns>
                <column width="0.125*"/>
                <column width="0.25*"/>
                <column width="0.25*"/>
                <column width="0.25*"/>
                <column width="0.125*"/>
            </columns>
            <button name="tab_multiboard_aa" col="1" font_size="24" text="AA Leaderboards" width="300" height="75" border_thickness="4" padding_bottom="8">
                <picture texture="pixel" width="0.6*" height="2" vertical_align="bottom" margin_bottom="18"/>
            </button>
            <button name="tab_multiboard_ab" col="2" font_size="24" text="AB Leaderboards" width="300" height="75" border_thickness="4"/>
            <button name="tab_runners" col="3" font_size="24" text="All 1.16 Runners" width="300" height="75" border_thickness="4"/>
        </grid>

    </grid>


</control>