<?xml version="1.0" encoding="utf-8" ?>
<control>
    <grid name="all_versions">
        <rows>
            <row height="648"/>
            <row height="200"/>
        </rows>
        <columns>
            <column width="160" collapsed="true"/>
            <column width="30 * 68"/>
        </columns>

        <!-- co-op lobby -->
        <lobby row="0" col="0" rowspan="3"/>

        <!-- all 1.16 runners -->
        <flow_panel name="runner_list" row="0" col="1" direction="toptobottom" padding_top="8" padding_left="4">
        </flow_panel>

        <!-- needed to load runner data -->
        <leaderboard category="All Advancements" version="1.16" draw_mode="none"/>

        <panel row="1" col="1">
            <grid>
                <columns>
                    <column width="0.30"/>
                    <column width="0.22*"/>
                    <column width="0.22*"/>
                    <column width="0.22*"/>
                    <column width="1*"/>
                </columns>
                <button name="tab_multiboard_aa" col="1" font_size="24" text="AA Leaderboards" width="300" height="75" border_thickness="4"/>
                <button name="tab_multiboard_ab" col="2" font_size="24" text="AB Leaderboards" width="300" height="75" border_thickness="4"/>
                <button name="tab_runners" col="3" font_size="24" text="All 1.16 Runners" width="300" height="75" border_thickness="4" padding_bottom="8">
                    <picture texture="pixel" width="0.6*" height="2" vertical_align="bottom" margin_bottom="18"/>
                </button>
                <text_block name="debug_log" col="4" h_text_align="left" padding_top="10"/>
            </grid>
        </panel>   
    </grid>

</control>